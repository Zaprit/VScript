VsWidgets.checkBox(){


            case "$DISPTECH" in

                "X11")

                # Make the menu builder files
                rm -rf .menubuildfile && touch .menubuildfile

                # Get The Ammount Of libraries we have


                # Echo the begining of the command without a newline and esaping correctly
                echo -ne "--checklist \"$TITLE\" 0 0 $LIBSCOUNT --backtitle \"$BACKTITLE\" " >> .menubuildfile

                COUNT=1
                for ent in $@
                do
                  echo -ne "$COUNT \"$lib\" off " >> .menubuildfile
                  COUNT=$(($COUNT+1))
                done
                OUTPUT=$(dialog --file .menubuildfile 3>&1 1>&2 2>&3)
                return $OUTPUT



                        if [ "$ICON" != "" ]
                        then
                                zenity --title="$2" --name="$TITLE" --icon="$ICON" --info --text="$1"
                        else
                                zenity --title="$2" --name="$TITLE" --info --text="$1"

                        fi
                ;;
                "DIALOG")

                  # Make the menu builder files
                  rm -rf .menubuildfile && touch .menubuildfile

                  # Get The Ammount Of libraries we have


                  # Echo the begining of the command without a newline and esaping correctly
                  echo -ne "--checklist \"$TITLE\" 0 0 $LIBSCOUNT --backtitle \"$BACKTITLE\" " >> .menubuildfile

                  COUNT=1
                  for ent in $@
                  do
                    echo -ne "$COUNT \"$lib\" off " >> .menubuildfile
                    COUNT=$(($COUNT+1))
                  done
                  OUTPUT=$(dialog --file .menubuildfile 3>&1 1>&2 2>&3)
                  return $OUTPUT
                ;;
                "TEXT")
                        clear
                        echo $TITLE
                        for (( i = 0; i < $(tput cols); i++ )); do; echo -n "â€”"; done
                        for

                ;;
                *)
                throw "DISP NOT INITIALISED"
                return 1
                ;;
        esac
}
