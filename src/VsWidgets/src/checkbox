VsWidgets.checkBox(){
            case "$DISPTECH" in

                "X11")
                        if [ "$ICON" != "" ]
                        then
                                zenity --title="$2" --name="$TITLE" --icon="$ICON" --info --text="$1"
                        else
                                zenity --title="$2" --name="$TITLE" --info --text="$1"

                        fi
                ;;
                "DIALOG")
                        dialog --title "$2" --backtitle "$TITLE" --infobox "$1" 0 0
                ;;
                "TEXT")
                        clear
                        echo $TITLE
                        for (( i = 0; i < $(tput cols); i++ )); do; echo -n "â€”"; done
                        echo

                ;;
                *)
                return 1
                ;;
        esac
}
